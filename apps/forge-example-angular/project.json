{
  "name": "forge-example-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "oasisdigital",
  "sourceRoot": "apps/forge-example-angular/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/forge-example-angular",
        "index": "apps/forge-example-angular/src/index.html",
        "main": "apps/forge-example-angular/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/forge-example-angular/tsconfig.app.json",
        "assets": [
          "apps/forge-example-angular/src/favicon.ico",
          "apps/forge-example-angular/src/assets"
        ],
        "styles": ["apps/forge-example-angular/src/styles.css"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "forge-example-angular:build:production"
        },
        "development": {
          "browserTarget": "forge-example-angular:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "forge-example-angular:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/forge-example-angular/**/*.ts",
          "apps/forge-example-angular/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/forge-example-angular/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "forge-example-angular:build"
      }
    },
    "forge-lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx forge lint",
        "cwd": "apps/forge-example-angular/.forge"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx nx build forge-example-app", "npx forge deploy"],
        "cwd": "apps/forge-example-angular/.forge",
        "parallel": false
      }
    },
    "app-build-watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx build forge-example-app --watch"
      }
    },
    "tunnel": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx nx build forge-example-app --watch",
          "npx forge tunnel"
        ],
        "cwd": "apps/forge-example-angular/.forge",
        "parallel": true
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx nx deploy forge-example-app",
            "forwardAllArgs": false
          },
          "npx forge install --non-interactive --product=Jira --environment=development"
        ],
        "cwd": "apps/forge-example-angular/.forge",
        "parallel": false
      }
    },
    "upgrade": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx nx deploy forge-example-app",
            "forwardAllArgs": false
          },
          "npx forge install --non-interactive --upgrade --confirm-scopes --product=Jira --environment=development"
        ],
        "cwd": "apps/forge-example-angular/.forge"
      }
    }
  }
}
